generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
  engineType    = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String                    @id @default(uuid())
  email                   String                    @unique
  passwordHash            String
  name                    String?
  isEmailVerified         Boolean                   @default(false)
  createdAt               DateTime                  @default(now())
  updatedAt               DateTime                  @updatedAt
  role                    Role                      @default(parent)
  preferredVoiceId        String?
  avatarId                String?
  pinHash                 String?
  googleId                String?                   @unique
  deletedAt               DateTime?
  isDeleted               Boolean                   @default(false)
  onboardingStatus        OnboardingStatus          @default(account_created)
  biometricsEnabled       Boolean                   @default(false)
  activityLogs            ActivityLog[]
  kids                    Kid[]
  notificationPreferences NotificationPreference[]
  notifications           Notification[]
  parentFavorites         ParentFavorite[]
  parentRecommendations   ParentRecommendation[]
  paymentMethods          PaymentMethod[]
  paymentTransactions     PaymentTransaction[]
  profile                 Profile?
  restrictedStories       RestrictedStory[]
  Reward                  Reward[]
  auth                    Session[]
  subscriptions           Subscription[]
  supportTickets          SupportTicket[]
  Token                   Token[]
  badges                  UserBadge[]
  userIps                 UserIP[]
  learningExpectations    UserLearningExpectation[]
  avatar                  Avatar?                   @relation(fields: [avatarId], references: [id])
  preferredVoice          Voice?                    @relation("PreferredVoice", fields: [preferredVoiceId], references: [id])
  voices                  Voice[]
  preferredCategories     Category[]                @relation("UserPreferredCategories")

  @@index([isDeleted])
  @@map("users")
}

model Kid {
  id                       String                     @id @default(uuid())
  name                     String?
  parentId                 String
  createdAt                DateTime                   @default(now())
  updatedAt                DateTime                   @updatedAt
  preferredVoiceId         String?
  ageRange                 String?
  avatarId                 String?
  dailyScreenTimeLimitMins Int?
  currentReadingLevel      Int                        @default(1)
  bedtimeDimScreen         Boolean                    @default(false)
  bedtimeLockApp           Boolean                    @default(false)
  bedtimeReminder          Boolean                    @default(false)
  bedtimeStoriesOnly       Boolean                    @default(false)
  bedtimeDays              Int[]                      @default([])
  bedtimeEnd               String?
  bedtimeStart             String?
  excludedTags             String[]                   @default([])
  isBedtimeEnabled         Boolean                    @default(false)
  buddySelectedAt          DateTime?
  storyBuddyId             String?
  deletedAt                DateTime?
  isDeleted                Boolean                    @default(false)
  activityLogs             ActivityLog[]
  buddyInteractions        BuddyInteraction[]
  dailyChallenges          DailyChallengeAssignment[]
  downloadedStories        DownloadedStory[]
  favorites                Favorite[]
  avatar                   Avatar?                    @relation(fields: [avatarId], references: [id])
  parent                   User                       @relation(fields: [parentId], references: [id], onDelete: Cascade)
  preferredVoice           Voice?                     @relation("KidPreferredVoice", fields: [preferredVoiceId], references: [id])
  storyBuddy               StoryBuddy?                @relation(fields: [storyBuddyId], references: [id])
  notificationPreferences  NotificationPreference[]
  parentRecommendations    ParentRecommendation[]
  questionAnswers          QuestionAnswer[]
  restrictedStories        RestrictedStory[]
  rewardRedemptions        RewardRedemption[]
  rewards                  Reward[]
  screenTimeSessions       ScreenTimeSession[]
  createdStories           Story[]                    @relation("CreatedStories")
  storyPaths               StoryPath[]
  progresses               StoryProgress[]
  userBadges               UserBadge[]
  preferredCategories      Category[]                 @relation("KidPreferredCategories")

  @@index([isDeleted])
  @@map("kids")
}

model Session {
  id        String    @id @default(uuid())
  userId    String
  token     String    @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())
  deletedAt DateTime?
  isDeleted Boolean   @default(false)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, token])
  @@index([isDeleted])
  @@map("sessions")
}

model Token {
  id        String    @id @default(uuid())
  userId    String
  token     String    @unique
  type      String
  expiresAt DateTime
  createdAt DateTime  @default(now())
  deletedAt DateTime?
  isDeleted Boolean   @default(false)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, type])
  @@index([userId, token])
  @@index([isDeleted])
  @@map("tokens")
}

model Profile {
  id                String    @id @default(uuid())
  userId            String    @unique
  explicitContent   Boolean   @default(true)
  maxScreenTimeMins Int?
  language          String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  deletedAt         DateTime?
  isDeleted         Boolean   @default(false)
  country           String
  languageCode      String?
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([isDeleted])
  @@map("profiles")
}

model LearningExpectation {
  id          String                    @id @default(uuid())
  name        String                    @unique
  description String?
  category    String?
  isActive    Boolean                   @default(true)
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt
  isDeleted   Boolean                   @default(false)
  deletedAt   DateTime?
  users       UserLearningExpectation[]

  @@index([isDeleted])
  @@index([isActive])
  @@map("learning_expectations")
}

model UserLearningExpectation {
  id                    String              @id @default(uuid())
  userId                String
  learningExpectationId String
  selectedAt            DateTime            @default(now())
  isDeleted             Boolean             @default(false)
  deletedAt             DateTime?
  learningExpectation   LearningExpectation @relation(fields: [learningExpectationId], references: [id], onDelete: Cascade)
  user                  User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, learningExpectationId])
  @@index([userId])
  @@index([learningExpectationId])
  @@index([isDeleted])
  @@map("user_learning_expectations")
}

model Story {
  id                    String                 @id @default(uuid())
  title                 String
  description           String
  language              String
  coverImageUrl         String
  audioUrl              String
  isInteractive         Boolean
  ageMin                Int
  ageMax                Int
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  recommended           Boolean                @default(false)
  textContent           String?
  aiGenerated           Boolean                @default(false)
  difficultyLevel       Int                    @default(1)
  wordCount             Int                    @default(0)
  deletedAt             DateTime?
  isDeleted             Boolean                @default(false)
  creatorKidId          String?
  backgroundColor       String                 @default("#5E3A54")
  durationSeconds       Int?
  StoryThemes           StoryThemes[]
  dailyChallenges       DailyChallenge[]
  downloads             DownloadedStory[]
  favorites             Favorite[]
  parentFavorites       ParentFavorite[]
  parentRecommendations ParentRecommendation[]
  restrictedStories     RestrictedStory[]
  creatorKid            Kid?                   @relation("CreatedStories", fields: [creatorKidId], references: [id])
  storyAudioCaches      StoryAudioCache[]
  branches              StoryBranch[]
  images                StoryImage[]
  paths                 StoryPath[]
  progresses            StoryProgress[]
  questions             StoryQuestion[]
  categories            Category[]             @relation("StoryCategories")
  seasons               Season[]               @relation("StorySeasons")

  @@index([isDeleted])
  @@map("stories")
}

model StoryImage {
  id        String    @id @default(uuid())
  url       String
  caption   String?
  storyId   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  isDeleted Boolean   @default(false)
  story     Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@index([isDeleted])
  @@map("story_images")
}

model StoryBranch {
  id        String    @id @default(uuid())
  storyId   String
  prompt    String
  optionA   String
  optionB   String
  nextA     String?
  nextB     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  isDeleted Boolean   @default(false)
  story     Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@index([isDeleted])
  @@map("story_branches")
}

model Favorite {
  id        String    @id @default(uuid())
  storyId   String
  createdAt DateTime  @default(now())
  kidId     String
  deletedAt DateTime?
  isDeleted Boolean   @default(false)
  kid       Kid       @relation(fields: [kidId], references: [id], onDelete: Cascade)
  story     Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@index([isDeleted])
  @@map("favorites")
}

model ParentFavorite {
  id        String    @id @default(uuid())
  userId    String
  storyId   String
  createdAt DateTime  @default(now())
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  story     Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, storyId])
  @@map("parent_favorites")
}

model StoryProgress {
  id             String    @id @default(uuid())
  storyId        String
  progress       Float     @default(0)
  completed      Boolean   @default(false)
  lastAccessed   DateTime  @default(now())
  kidId          String
  totalTimeSpent Int       @default(0)
  deletedAt      DateTime?
  isDeleted      Boolean   @default(false)
  kid            Kid       @relation(fields: [kidId], references: [id], onDelete: Cascade)
  story          Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([kidId, storyId])
  @@index([isDeleted])
  @@map("story_progress")
}

model Subscription {
  id        String    @id @default(uuid())
  userId    String
  plan      String
  status    String    @default("active")
  startedAt DateTime  @default(now())
  endsAt    DateTime?
  deletedAt DateTime?
  isDeleted Boolean   @default(false)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([isDeleted])
  @@map("subscriptions")
}

model SupportTicket {
  id        String    @id @default(uuid())
  userId    String
  subject   String
  message   String
  status    String    @default("open")
  createdAt DateTime  @default(now())
  deletedAt DateTime?
  isDeleted Boolean   @default(false)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([isDeleted])
  @@map("support_tickets")
}

model PaymentMethod {
  id           String               @id @default(uuid())
  userId       String
  type         String
  details      String
  createdAt    DateTime             @default(now())
  provider     String?
  expiry       String?
  last4        String?
  meta         Json?
  deletedAt    DateTime?
  isDeleted    Boolean              @default(false)
  user         User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions PaymentTransaction[]

  @@index([isDeleted])
  @@map("payment_methods")
}

model PaymentTransaction {
  id              String         @id @default(uuid())
  userId          String
  paymentMethodId String?
  amount          Float
  status          String
  createdAt       DateTime       @default(now())
  currency        String?
  reference       String?
  deletedAt       DateTime?
  isDeleted       Boolean        @default(false)
  paymentMethod   PaymentMethod? @relation(fields: [paymentMethodId], references: [id])
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([isDeleted])
  @@map("payment_transactions")
}

model DailyChallenge {
  id            String                     @id @default(uuid())
  storyId       String
  challengeDate DateTime
  wordOfTheDay  String
  meaning       String
  deletedAt     DateTime?
  isDeleted     Boolean                    @default(false)
  assignments   DailyChallengeAssignment[]
  story         Story                      @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@index([isDeleted])
  @@map("daily_challenges")
}

model Voice {
  id                String    @id @default(uuid())
  userId            String?
  name              String
  type              String
  url               String?
  elevenLabsVoiceId String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  deletedAt         DateTime?
  isDeleted         Boolean   @default(false)
  kidsPreferring    Kid[]     @relation("KidPreferredVoice")
  usersPreferring   User[]    @relation("PreferredVoice")
  user              User?     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([name])
  @@index([isDeleted])
  @@map("voices")
}

model Reward {
  id          String             @id @default(uuid())
  name        String
  description String?
  points      Int
  imageUrl    String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  userId      String?
  kidId       String?
  deletedAt   DateTime?
  isDeleted   Boolean            @default(false)
  redemptions RewardRedemption[]
  kid         Kid?               @relation(fields: [kidId], references: [id])
  user        User?              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([isDeleted])
  @@map("rewards")
}

model DailyChallengeAssignment {
  id          String         @id @default(uuid())
  kidId       String
  challengeId String
  completed   Boolean        @default(false)
  completedAt DateTime?
  assignedAt  DateTime       @default(now())
  deletedAt   DateTime?
  isDeleted   Boolean        @default(false)
  challenge   DailyChallenge @relation(fields: [challengeId], references: [id])
  kid         Kid            @relation(fields: [kidId], references: [id], onDelete: Cascade)

  @@index([isDeleted])
  @@map("daily_challenge_assignments")
}

model NotificationPreference {
  id        String           @id @default(uuid())
  userId    String?
  kidId     String?
  enabled   Boolean          @default(true)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  type      NotificationType
  deletedAt DateTime?
  isDeleted Boolean          @default(false)
  kid       Kid?             @relation(fields: [kidId], references: [id], onDelete: Cascade)
  user      User?            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([isDeleted])
  @@map("notification_preferences")
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category  NotificationCategory
  title     String
  body      String
  data      Json?    // Additional metadata (deeplink info, entity IDs, etc.)
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  isDeleted Boolean  @default(false)
  deletedAt DateTime?

  @@index([userId, createdAt])
  @@index([userId, isRead])
  @@index([isDeleted])
  @@map("notifications")
}


model RewardRedemption {
  id         String    @id @default(uuid())
  rewardId   String
  kidId      String
  redeemedAt DateTime  @default(now())
  status     String
  deletedAt  DateTime?
  isDeleted  Boolean   @default(false)
  kid        Kid       @relation(fields: [kidId], references: [id], onDelete: Cascade)
  reward     Reward    @relation(fields: [rewardId], references: [id])

  @@index([isDeleted])
  @@map("reward_redemptions")
}

model ActivityLog {
  id          String    @id @default(uuid())
  userId      String?
  kidId       String?
  action      String
  details     String?
  createdAt   DateTime  @default(now())
  deviceModel String?
  deviceName  String?
  ipAddress   String?
  os          String?
  status      String
  deletedAt   DateTime?
  isDeleted   Boolean   @default(false)
  kid         Kid?      @relation(fields: [kidId], references: [id])
  user        User?     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([isDeleted])
  @@map("activity_logs")
}

model StoryPath {
  id          String    @id @default(uuid())
  kidId       String
  storyId     String
  path        String
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  deletedAt   DateTime?
  isDeleted   Boolean   @default(false)
  kid         Kid       @relation(fields: [kidId], references: [id], onDelete: Cascade)
  story       Story     @relation(fields: [storyId], references: [id])

  @@index([isDeleted])
  @@map("story_paths")
}

model Category {
  id               String    @id @default(uuid())
  name             String    @unique
  description      String?
  image            String?
  deletedAt        DateTime?
  isDeleted        Boolean   @default(false)
  preferredByKids  Kid[]     @relation("KidPreferredCategories")
  stories          Story[]   @relation("StoryCategories")
  preferredByUsers User[]    @relation("UserPreferredCategories")

  @@index([isDeleted])
}

model Theme {
  id          String        @id @default(uuid())
  name        String        @unique
  description String?
  image       String?
  deletedAt   DateTime?
  isDeleted   Boolean       @default(false)
  StoryThemes StoryThemes[]

  @@index([isDeleted])
}

model StoryAudioCache {
  id        String    @id @default(uuid())
  storyId   String
  voiceType String
  audioUrl  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  isDeleted Boolean   @default(false)
  story     Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([storyId, audioUrl])
  @@unique([storyId, voiceType])
  @@index([isDeleted])
  @@map("story_audio_cache")
}

model StoryQuestion {
  id            String           @id @default(uuid())
  storyId       String
  question      String
  options       String[]
  correctOption Int
  deletedAt     DateTime?
  isDeleted     Boolean          @default(false)
  answers       QuestionAnswer[]
  story         Story            @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@index([isDeleted])
  @@map("story_questions")
}

model Avatar {
  id             String    @id @default(cuid())
  name           String?   @unique
  url            String
  isSystemAvatar Boolean   @default(false)
  publicId       String?
  createdAt      DateTime  @default(now())
  deletedAt      DateTime?
  isDeleted      Boolean   @default(false)
  displayName    String?
  kids           Kid[]
  users          User[]

  @@index([name])
  @@index([isSystemAvatar])
  @@map("avatars")
}

model AgeGroup {
  id        String    @id @default(uuid())
  name      String    @unique
  min       Int
  max       Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  isDeleted Boolean   @default(false)

  @@index([isDeleted])
  @@map("age_groups")
}

model ScreenTimeSession {
  id        String    @id @default(uuid())
  kidId     String
  startTime DateTime  @default(now())
  endTime   DateTime?
  duration  Int?
  date      DateTime  @default(now())
  deletedAt DateTime?
  isDeleted Boolean   @default(false)
  kid       Kid       @relation(fields: [kidId], references: [id], onDelete: Cascade)

  @@index([kidId, date])
  @@index([isDeleted])
  @@map("screen_time_sessions")
}

model QuestionAnswer {
  id             String        @id @default(uuid())
  kidId          String
  questionId     String
  storyId        String
  selectedOption Int
  isCorrect      Boolean
  answeredAt     DateTime      @default(now())
  deletedAt      DateTime?
  isDeleted      Boolean       @default(false)
  kid            Kid           @relation(fields: [kidId], references: [id], onDelete: Cascade)
  question       StoryQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([kidId])
  @@index([kidId, answeredAt])
  @@index([isDeleted])
  @@map("question_answers")
}

model UserIP {
  id        String    @id @default(uuid())
  userId    String
  ipAddress String
  userAgent String?
  firstUsed DateTime  @default(now())
  lastUsed  DateTime  @updatedAt
  deletedAt DateTime?
  isDeleted Boolean   @default(false)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ipAddress])
  @@index([ipAddress])
  @@index([isDeleted])
  @@map("user_ips")
}

model StoryBuddy {
  id                String             @id @default(uuid())
  name              String             @unique
  displayName       String
  description       String?
  type              String
  imageUrl          String
  profileAvatarUrl  String?
  isActive          Boolean            @default(true)
  themeColor        String?
  ageGroupMin       Int                @default(3)
  ageGroupMax       Int                @default(12)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  deletedAt         DateTime?
  isDeleted         Boolean            @default(false)
  buddyInteractions BuddyInteraction[]
  kids              Kid[]

  @@index([isDeleted])
  @@map("story_buddies")
}

model BuddyInteraction {
  id              String     @id @default(uuid())
  kidId           String
  buddyId         String
  interactionType String
  context         String?
  message         String?
  timestamp       DateTime   @default(now())
  deletedAt       DateTime?
  isDeleted       Boolean    @default(false)
  buddy           StoryBuddy @relation(fields: [buddyId], references: [id])
  kid             Kid        @relation(fields: [kidId], references: [id], onDelete: Cascade)

  @@index([kidId, timestamp])
  @@index([buddyId])
  @@index([isDeleted])
  @@map("buddy_interactions")
}

model Badge {
  id              String      @id @default(uuid())
  title           String
  description     String?
  iconUrl         String?
  unlockCondition String
  badgeType       String
  requiredAmount  Int         @default(1)
  priority        Int         @default(0)
  metadata        Json?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  deletedAt       DateTime?
  isDeleted       Boolean     @default(false)
  userBadges      UserBadge[]

  @@index([isDeleted])
  @@map("badges")
}

model UserBadge {
  id         String    @id @default(uuid())
  userId     String
  badgeId    String
  count      Int       @default(0)
  unlocked   Boolean   @default(false)
  unlockedAt DateTime?
  deletedAt  DateTime?
  isDeleted  Boolean   @default(false)
  kidId      String?
  badge      Badge     @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  kid        Kid?      @relation(fields: [kidId], references: [id], onDelete: Cascade)
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, kidId, badgeId])
  @@index([userId])
  @@index([kidId])
  @@index([badgeId])
  @@index([isDeleted])
  @@map("user_badges")
}

model Season {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  iconUrl     String?
  startDate   String?
  endDate     String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  isDeleted   Boolean   @default(false)
  deletedAt   DateTime?
  stories     Story[]   @relation("StorySeasons")

  @@index([isDeleted])
  @@map("seasons")
}

model DownloadedStory {
  id           String   @id @default(uuid())
  kidId        String
  storyId      String
  downloadedAt DateTime @default(now())
  kid          Kid      @relation(fields: [kidId], references: [id], onDelete: Cascade)
  story        Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([kidId, storyId])
  @@map("downloaded_stories")
}

model ParentRecommendation {
  id            String    @id @default(uuid())
  userId        String
  kidId         String
  storyId       String
  message       String?
  recommendedAt DateTime  @default(now())
  isDeleted     Boolean   @default(false)
  deletedAt     DateTime?
  kid           Kid       @relation(fields: [kidId], references: [id], onDelete: Cascade)
  story         Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, kidId, storyId])
  @@index([isDeleted])
  @@index([kidId])
  @@index([userId, kidId])
  @@map("parent_recommendations")
}

model RestrictedStory {
  id        String   @id @default(uuid())
  kidId     String
  storyId   String
  userId    String
  reason    String?
  createdAt DateTime @default(now())
  kid       Kid      @relation(fields: [kidId], references: [id], onDelete: Cascade)
  story     Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([kidId, storyId])
  @@index([kidId])
  @@map("restricted_stories")
}

model StoryThemes {
  A       String
  B       String
  stories Story  @relation(fields: [A], references: [id], onDelete: Cascade)
